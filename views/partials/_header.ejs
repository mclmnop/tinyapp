<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        
          <% if ( users.username) { %>
            <div style= "position: absolute; right: 0px; top:8px">
              <form class="form-inline" action="/logout" method="POST">
                  <p style="margin-bottom: 0rem; margin-right: 4px;">Logged in as: <%= users.username %> !</p>
                  <button type="submit" class="btn btn-primary" style="background-color: rgba(0,0,0,0.0); border-color: #0f1010; color: #0f1010; margin-right: 4px;">Logout</button>
              </form>
            </div>
          <%} else {%>
            <div style="  position: absolute; right: 0px; top:-8px">
              <form class="form-inline" action="/login" method="POST">
                  <input class="form-control" type="text" name="username" placeholder="Enter your name" style="width: 200px; margin: 1em">
                  <button type="submit" class="btn btn-primary" style="background-color: rgba(0,0,0,0.0); border-color: #0f1010; color: #0f1010; margin-right: 4px;">Login</button>
              </form>
            </div>
          <%} %>
        
      </div>
    </div>
  </nav>
</header>


